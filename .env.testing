# Testing Environment Configuration
# This file ensures tests NEVER run against production database

APP_NAME="QI Survey (Testing)"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# CRITICAL: Force SQLite in-memory for all tests
# This prevents accidental production database usage
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Disable external services during testing
CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
MAIL_MAILER=array
BROADCAST_CONNECTION=null

# Faster bcrypt for tests
BCRYPT_ROUNDS=4

# Disable monitoring tools
PULSE_ENABLED=false
TELESCOPE_ENABLED=false
NIGHTWATCH_ENABLED=false
